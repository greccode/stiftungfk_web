@model List<ProjektFoerderer>

<h1>Unsere Förderpartner seit 2016</h1>

<div class="donor-grid">
    @foreach (var donor in Model)
    {
        <div class="donor-item" onclick="window.location.href = '@donor.ImageUrl'">
            <img src="@donor.ImageUrl" class="donor-image" />
            <div class="donor-info">
                <h3>@donor.Name</h3>
                <p>@donor.Name</p>
            </div>
        </div>
    }
</div>

<script>
    // Add hover effect
    document.querySelectorAll('.donor-item').forEach(item => {
        item.addEventListener('mouseenter', () => {
            item.style.transform = 'scale(1.05)';
            item.style.transition = 'transform 0.3s';
        });
        item.addEventListener('mouseleave', () => {
            item.style.transform = 'scale(1)';
        });
    });
</script>

<style>
    .donor-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
    }

    .donor-item {
        border: 1px solid #ddd;
        padding: 15px;
        text-align: center;
        cursor: pointer;
    }

    .donor-image {
        max-width: 100%;
        height: 200px; /* Set the desired height for the donor image */
        object-fit: cover; /* Ensure the image fills the container without distortion */
    }
</style>
