@model List<ProjektFoerderer>

<h1>Unsere Projektförderer</h1>

<div class="donor-grid">
    @foreach (var donor in Model)
    {
        <div class="donor-item" onclick="window.location.href = '@donor.ImageUrl'">
            <img src="@donor.ImageUrl" class="donor-image" alt="@donor.Name" />
            <div class="donor-info">
                <h5>@donor.Name</h5>
            </div>
        </div>
    }
</div>

<style>
    .donor-grid {
        padding: 40px 0px;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        justify-items: center;
    }

    .donor-item {
        position: relative;
        border: 1px solid #ddd;
        padding: 15px;
        text-align: center;
        cursor: pointer;
        height:250px;
        width: 250px;
        display: flex;
        flex-direction: column;
        align-items: center;
        overflow: hidden;
        transition: transform 0.3s;
    }

    .donor-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 1px solid transparent;
        box-sizing: border-box;
        pointer-events: none;
        transition: border-color 0.7s;
    }

    .donor-item:hover::before {
        border-color: red;
        animation: border-flow 1s linear forwards;
    }

    @@ keyframes border-flow {
        0% {
            border-color: red transparent transparent transparent;
        }
        25% {
            border-color: red red transparent transparent;
        }
        50% {
            border-color: red red red transparent;
        }
        75% {
            border-color: red red red red;
        }
        100% {
            border-color: red;
        }
    }

    .donor-image {
        max-width: 100%;
        height: 200px;
        object-fit: contain;
        z-index: 1;
    }

    .donor-info {
        margin-top: 10px;
        text-align: center;
        z-index: 1;
    }
</style>

<script>
    // Add hover effect for scaling
    document.querySelectorAll('.donor-item').forEach(item => {
        item.addEventListener('mouseenter', () => {
            item.style.transform = 'scale(1.05)';
        });
        item.addEventListener('mouseleave', () => {
            item.style.transform = 'scale(1)';
        });
    });
</script>
