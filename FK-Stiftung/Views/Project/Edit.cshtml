﻿
@model Project

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class=" text-primary">Projekt bearbeiten</h2>
            <hr/>
        </div>

        <div asp-validation-summary="ModelOnly"></div>
        
        <div class="mb-3 row">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type ="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" type="text" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PicturePath" class="p-0"></label>
            <input asp-for="PicturePath" type="text" class="form-control" />
            <span asp-validation-for="PicturePath" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Projekt aktualisieren</button>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <a asp-controller="Project" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Zurück zur Übersicht
                </a>
            </div>
        </div>

    </div>
</form>

        
        @section Scripts {
        @{
            //client-side validation (prolly comes from model)
        <partial name="_ValidationScriptsPartial"/>
        }
        }