@model Project

<form method="post">
    <input asp-for ="Id" hidden /> @*Hidden property so it is populated (not necessary)*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class=" text-primary">Projekt entfernen</h2>
            <hr />
        </div>

        @*<div asp-validation-summary="All"></div>*@

        <div class="mb-3 row">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PicturePath" class="p-0"></label>
            <input asp-for="PicturePath" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Projekt löschen!</button>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <a asp-controller="Project" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Zurück zur Übersicht
                </a>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{
        //client-side validation (prolly comes from model)
        <partial name="_ValidationScriptsPartial" />
    }
}